<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="settings_frag_basic_editText">
        <item name="android:textColor">@color/soft_steel</item>
        <item name="android:textColorHint">@color/ink</item>
        <item name="android:hint">@string/bike_hint</item>
    </style>

    <style name="settings_frag_upper_editText" parent="settings_frag_basic_editText">
        <item name="android:layout_marginStart">@dimen/settings_outer_margin</item>
        <item name="android:layout_marginEnd">@dimen/settings_outer_margin</item>
        <item name="android:layout_marginTop">@dimen/settings_inner_margin</item>
    </style>

    <style name="RideAlert" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorAccent">@color/ink</item>
        <item name="android:textColor">@color/ink</item>
        <item name="android:textColorPrimary">@color/ink</item>
    </style>

    <style name="SettingsButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/ink</item>
        <item name="android:textColor">@color/goldenrod</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>
