<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/Rider_stats_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:cardBackgroundColor="#0235ba"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<TextView
    android:id="@+id/card_view_max_lean"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:textColor="#ffffff"
    android:text="@string/maxlean"/>

        <TextView
            android:textColor="#ffffff"
            android:layout_alignBottom="@id/card_view_max_lean"
            android:id="@+id/card_view_ride_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:text="@string/time"
            />


        <TextView
            android:textColor="#ffffff"
            android:id="@+id/card_view_psi"
            android:layout_below="@id/card_view_max_lean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Front Psi and Back psi"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>